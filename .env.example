# API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Environment
NODE_ENV=production

# Cost Control (Required for production)
DAILY_COST_LIMIT=50.0
HOURLY_COST_LIMIT=5.0
EMERGENCY_STOP_LIMIT=75.0

# Admin Access (Required for monitoring)
ADMIN_TOKEN=your-secure-admin-token-here

# Optional: Custom API endpoint (if using different backend)
# NEXT_PUBLIC_API_BASE_URL=https://your-custom-api.com/api

# Optional: Enable additional logging
# DEBUG=true

# Optional: Redis URL for distributed rate limiting (for high-scale deployments)
# REDIS_URL=redis://your-redis-instance